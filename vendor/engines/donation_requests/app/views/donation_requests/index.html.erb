<%= render :partial => "/shared/subnav" %>

<% content_for :body_content_left do %>

<% form_for @donation_request do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @donation_request,
    :include_object_name => true
  } %>

<p>Please fill out the form below and an Andrews representative will contact you concerning your request as soon as possible.</p>
<table id="donation">
  <tr>
		<td></td>
		<td><span class="yellow">*</span>Required</td>
	</tr>
  <tr>
    <td  class="right"><%= f.label :event_region -%></td>
    <td><select name="donation_request[event_region]">
				<% @regions = Region.all()%>
				<% @regions.each do |region|%>
					<option value="<%= region.title %>"><%= region.title %></option>
				<% end %>
			</select>
		</td>
  </div>
  
  <tr>
    <td  class="right"><%= f.label :event_name -%></td>
    <td class="input"><%= f.text_field :event_name, :class => "required" -%></td>
  </div>
  
  <tr>
    <td  class="right"><%= f.label :event_location -%></td>
    <td class="input"><%= f.text_field :event_location, :class => "required" -%></td>
  </div>
  
  <tr>
    <td  class="right"><%= f.label :event_address -%></td>
    <td class="input"><%= f.text_area :event_address, :rows => 3, :class => 'wymeditor widest', :class => "required" -%></td>
  </div>
  
  <tr>
    <td  class="right"><%= f.label :expected_attendence, "Event Attendance" -%></td>
    <td class="input"><%= f.text_field :expected_attendence, :class => "required" -%></td>
  </div>
  
  <tr>
    <td  class="right"><%= f.label :event_contact_name -%></td>
    <td class="input"><%= f.text_field :event_contact_name, :class => "required" -%></td>
  </div>
  
  <tr>
    <td  class="right"><%= f.label :event_contact_number -%></td>
    <td class="input"><%= f.text_field :event_contact_number, :class => "required phoneUS" -%></td>
  </div>
  
  <tr>
    <td  class="right"><%= f.label :event_contact_email -%></td>
    <td class="input"><%= f.text_field :event_contact_email, :class => "email" -%></td>
  </div>
  
  <tr>
    <td class="right"><%= f.label :event_concessionaire -%></td>
    <td class="input"><%= f.text_field :event_concessionaire, :class => "required" -%></td>
  </div>
  
  <tr>
    <td class="right"><%= f.label :event_concessionaire_phone -%></td>
    <td class="input"><%= f.text_field :event_concessionaire_phone, :class => "phoneUS required" -%></td>
  </div>
  
  <tr>
    <td class="right"><%= f.label :charity_501c3, "Charity/501C3" -%></td>
    <td class="input"><%= f.text_field :charity_501c3, :class => "required" -%></td>
  </div>
  
  <tr>
    <td class="right"><%= f.label :wine_spirits_served -%></td>
    <td class="input"><select name="donation_request[wine_spirits_served]">
					<option value="Yes">Yes</option>
					<option value="No">No</option>
			</select></td>
  </div>
  
  <tr>
    <td class="right"><%= f.label :additional_comments -%></td>
    <td><%= f.text_area :additional_comments, :rows => 5, :class => 'wymeditor widest' -%></td>
  </div>
  
  <tr>
	<td></td>
	<td><%= f.submit "Submit", :class => "submit" %></td>
  </tr>
	<tr>
		<td></td>
		<td><div class="sent">Your donation request has been sent. Thank you.</div></td>
	</tr>
</table>
<% end -%>

<% end %>

<%= render :partial => "/shared/content_page" %>

