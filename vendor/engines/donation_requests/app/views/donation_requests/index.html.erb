<% if @page.parent %>
<ul class="subnav">
	<% @page.parent.children.each do |child| %>
		<li><%= link_to child.title, child.url -%></li>
	<% end %>
</ul>
<% end %>

<% form_for @donation_requests do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @donation_requests,
    :include_object_name => true
  } %>
<table>
  <tr>
    <td><%= f.label :event_region -%></td>
    <td><%= f.text_field :event_region -%></td>
  </div>
  
  <tr>
    <td><%= f.label :event_name -%></td>
    <td><%= f.text_field :event_name -%></td>
  </div>
  
  <tr>
    <td><%= f.label :event_location -%></td>
    <td><%= f.text_field :event_location -%></td>
  </div>
  
  <tr>
    <td><%= f.label :event_address -%></td>
    <td><%= f.text_area :event_address, :rows => 5, :class => 'wymeditor widest' -%></td>
  </div>
  
  <tr>
    <td><%= f.label :expected_attendence -%></td>
    <td><%= f.text_field :expected_attendence -%></td>
  </div>
  
  <tr>
    <td><%= f.label :event_contact_name -%></td>
    <td><%= f.text_field :event_contact_name -%></td>
  </div>
  
  <tr>
    <td><%= f.label :event_contact_number -%></td>
    <td><%= f.text_field :event_contact_number -%></td>
  </div>
  
  <tr>
    <td><%= f.label :event_contact_email -%></td>
    <td><%= f.text_field :event_contact_email -%></td>
  </div>
  
  <tr>
    <td><%= f.label :event_concessionaire -%></td>
    <td><%= f.text_field :event_concessionaire -%></td>
  </div>
  
  <tr>
    <td><%= f.label :event_concessionaire_phone -%></td>
    <td><%= f.text_field :event_concessionaire_phone -%></td>
  </div>
  
  <tr>
    <td><%= f.label :charity_501c3, "Charity/501C3" -%></td>
    <td><%= f.text_field :charity_501c3 -%></td>
  </div>
  
  <tr>
    <td><%= f.label :wine_spirits_served -%></td>
    <td><%= f.text_field :wine_spirits_served -%></td>
  </div>
  
  <tr>
    <td><%= f.label :additional_comments -%></td>
    <td><%= f.text_area :additional_comments, :rows => 10, :class => 'wymeditor widest' -%></td>
  </div>
  
  <tr>
	<td><%= f.submit %></td>
  </tr>
</table>
<% end -%>

