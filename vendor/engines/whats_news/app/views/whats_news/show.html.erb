<% content_for :body_content_title do %>
  <%= @whats_new.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%=raw @whats_new.title %>
  </div>
  
  <div>
    <h3>Image</h3>
    <%= image_fu @whats_new.image, nil %>
  </div>
  
  <div>
    <h3>Body</h3>
    <%=raw @whats_new.body %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="whats_news">
    <% @whats_news.each do |whats_new| %>
      <li>
        <%= link_to whats_new.title, whats_new_url(whats_new) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
