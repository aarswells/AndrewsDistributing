<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(homepage_image) -%>">
  <span class='title'>
    <%= homepage_image.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), homepage_image_url(homepage_image),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_homepage_image_path(homepage_image),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_homepage_image_path(homepage_image),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message',
        :title => homepage_image.title
      ),
        :'data-method' => :delete %>
  </span>
</li>
