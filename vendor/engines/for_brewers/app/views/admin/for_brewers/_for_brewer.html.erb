<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(for_brewer) -%>">
  <span class='title'>
    <%= for_brewer.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), for_brewer_url(for_brewer),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_for_brewer_path(for_brewer),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_for_brewer_path(for_brewer),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message',
        :title => for_brewer.title
      ),
        :'data-method' => :delete %>
  </span>
</li>
