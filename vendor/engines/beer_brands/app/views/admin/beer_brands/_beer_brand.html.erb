<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(beer_brand) -%>">
  <span class='title'>
    <%= image_fu beer_brand.image, "50x50" %><%= beer_brand.main_category %> - <%= beer_brand.sub_category %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), beer_brand_url(beer_brand),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_beer_brand_path(beer_brand),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_beer_brand_path(beer_brand),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message',
        :title => beer_brand.main_category
      ),
        :'data-method' => :delete %>
  </span>
</li>
