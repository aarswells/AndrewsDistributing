<% content_for :body_content_title do %>
  <%= @logo.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%=raw @logo.title %>
  </div>
  
  <div>
    <h3>Image</h3>
    <%= image_fu @logo.image, nil %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="logos">
    <% @logos.each do |logo| %>
      <li>
        <%= link_to logo.title, logo_url(logo) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
