<% content_for :body_content_title do %>
  <%= @whats_new_story.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%=raw @whats_new_story.title %>
  </div>
  
  <div>
    <h3>Thumbnail</h3>
    <%= image_fu @whats_new_story.thumbnail, nil %>
  </div>
  
  <div>
    <h3>Image</h3>
    <%= image_fu @whats_new_story.image, nil %>
  </div>
  
  <div>
    <h3>Text</h3>
    <%=raw @whats_new_story.text %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="whats_new_stories">
    <% @whats_new_stories.each do |whats_new_story| %>
      <li>
        <%= link_to whats_new_story.title, whats_new_story_url(whats_new_story) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
