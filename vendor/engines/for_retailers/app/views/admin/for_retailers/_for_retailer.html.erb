<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(for_retailer) -%>">
  <span class='title'>
    <%= for_retailer.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), for_retailer_url(for_retailer),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_for_retailer_path(for_retailer),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_for_retailer_path(for_retailer),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message',
        :title => for_retailer.title
      ),
        :'data-method' => :delete %>
  </span>
</li>
