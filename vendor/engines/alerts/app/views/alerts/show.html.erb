<% content_for :body_content_title do %>
  <%= @alert.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%=raw @alert.title %>
  </div>
  
  <div>
    <h3>Message</h3>
    <%=raw @alert.message %>
  </div>
  
  <div>
    <h3>Start Date</h3>
    <%=raw @alert.start_date %>
  </div>
  
  <div>
    <h3>End Date</h3>
    <%=raw @alert.end_date %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="alerts">
    <% @alerts.each do |alert| %>
      <li>
        <%= link_to alert.title, alert_url(alert) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
