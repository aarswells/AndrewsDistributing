<div id='header_content'>
<img class="stars2" src="/images/stars.png" />
<img class="stars1" src="/images/stars.png" />
  <%= render :partial => "/shared/menu",
             :locals => {
               :dom_id => 'menu',
               :css => 'menu'
             } -%>
</div>
<% @alerts = Alert.where(["start_date < ? AND end_date > ?", Time.now-6.hours+5.minutes, Time.now-6.hours-5.minutes]).order("start_date") %>
<% if !@alerts.empty? %>
  <div class="alert_box clearfix">
    <div class="inner">
      <ul>
        <% @alerts.each do |alert| %> 
          <li><%=raw alert.message %></li>
        <% end %> 
      </ul>
    </div>
  </div>
<% end %>
