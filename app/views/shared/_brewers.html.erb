<% brewers = ForBrewer.order("position ASC")%>
	<div class="brewer_titles">
		<ul>
			<% brewers.each_with_index do |brewer, i|%>
						<li><a href="#" class="<%= brewer.position %> pause brewer <% if i==0%> active<% end %>"><%= brewer.title %></a></li>
			<% end %>
		</ul>
	</div>
		<img src="/images/forBrewers.png" class="modal_image"  />
		<a href="#" class="close pause">BACK TO Main site <img src='/images/close.png' /></a>
		<div class="image_slider brewer">
		<div class="invisible"></div>
		<% brewers.each_with_index do |brewer, i|%>
		<% position = 550*i %>
		<script type="text/javascript">
		$(document).ready(function(){
			$('div.brewer_titles a.<%= brewer.position %>').click(function() {
			if (!$('.image_slider.brewer .<%= brewer.position %>').hasClass('active'))
			{
				$('.image_slider.brewer .video_slide.active .text').fadeOut();
				$('.image_slider.brewer div.video_slide').removeClass('active');
				$('div.brewer_titles a').removeClass('active');
				$('div.brewer_titles a.<%= brewer.position %>').addClass('active');
				$('.image_slider.brewer div.video_slide.<%= brewer.position %>').addClass('active');
				
				
				var position = <%= brewer.position %> * -550
				  $('.image_slider.brewer').animate({						
				    left: position
				  }, 1000	, function() {
						    // Animation complete.
								$('.image_slider.brewer .video_slide.active .text').fadeIn();
						  });
				}
				return false;
			});
			
			$(".preview_image.brewer.<%= brewer.position %>").click(function() {
				$(this).parent('.video_slide').prepend('<div class="video-js-box"><!-- Using the Video for Everybody Embed Code http://camendesign.com/code/video_for_everybody --><video id="example_video_1" duration="<%= brewer.duration %>" class="video-js" width="525" height="296" poster="<%= brewer.display_image.url %>" controls style="height:296px !important"><source src="<%= brewer.m4v_file.url %>" type=\'video/mp4; codecs="avc1.42E01E, mp4a.40.2"\' /><source src="<%= brewer.webm_file.url %>" type=\'video/webm; codecs="vp8, vorbis"\' /><source src="<%= brewer.ogg_file.url %>" type=\'video/ogg; codecs="theora, vorbis"\' /><!-- Flash Fallback. Use any flash video player here. Make sure to keep the vjs-flash-fallback class. --><a class="myPlayer" href="http://andrews.heroku.com<%= brewer.m4v_file.url %>" style="background-image:url(<%= brewer.display_image.url %>)"><img src="<%= brewer.display_image.url %>" /> </a></video></div>');
				$(this).css({'display':'none'});
				// a- tags with class "myPlayer" are transformed into video players
				flowplayer("a.myPlayer", "http://releases.flowplayer.org/swf/flowplayer-3.2.7.swf");
				$(this).siblings(".video-js-box").children("video").trigger("play");
				return false;
			});
			
		});
		</script>
		
		<div class="video_slide <%= brewer.position %> <% if i==0%> active<% end %>" style="left:<%= position %>px;">
			<img src="<%= brewer.display_image.url %>" width="525" height="296" class="preview_image brewer <%= brewer.position %>" />
			
			<div class="text">
			<%=raw brewer.text %>
			</div>
		</div>
		<%end%>
	</div>
	<a class="portal" target="_blank" href="http://sp.adntx.com/">Visit Our Supplier Portal >></a>