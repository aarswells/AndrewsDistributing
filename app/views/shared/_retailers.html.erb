<% retailers = ForRetailer.order("position ASC")%>
	<div class="modal_titles">
		<ul>
			<% retailers.each_with_index do |retailer, i|%>
						<li><a href="#" id="api_pause" class="<%= retailer.position %> simple <% if i==0%> active<% end %>"><%= retailer.title %></a></li>
			<% end %>
		</ul>
	</div>
		<img src="/images/forRetailers.png" class="modal_image"  />
		<a href="#" class="close" id="api_pause">BACK TO Main site <img src='/images/close.png' /></a>
		<div class="image_slider retailer">
		<div class="invisible"></div>
		<% retailers.each_with_index do |retailer, i|%>
		<% position = 550*i %>
		<script type="text/javascript">
		$(document).ready(function(){
			$('div.modal_titles a.<%= retailer.position %>').click(function() {
			
			if (!$('.image_slider.retailer.<%= retailer.id %>').hasClass('active'))
			{
				$('.image_slider.retailer .video_slide.active .text').fadeOut();
				$('.image_slider.retailer div.video_slide').removeClass('active');
				$('div.modal_titles a').removeClass('active');
				$('div.modal_titles a.<%= retailer.position %>').addClass('active');
				$('.image_slider.retailer div.video_slide.<%= retailer.position %>').addClass('active');

				var position = <%= retailer.position %> * -550
				  $('.image_slider.retailer').animate({						
				    left: position
				  }, 1000	, function() {
						    // Animation complete.
								$('.image_slider.retailer .video_slide.active .text').fadeIn();
						  });
				}
				return false;
			});
			
			$(".preview_image.retail.<%= retailer.position %>").click(function() {
				$(this).parent('.video_slide').prepend('<div class="video-js-box"><!-- Using the Video for Everybody Embed Code http://camendesign.com/code/video_for_everybody --><video id="example_video_1" class="video-js" width="525" height="296" poster="<%= retailer.display_image.url %>" controls style="height:296px !important"><source src="<%= retailer.m4v_file.url %>" type="video/mp4" /><source src="<%= retailer.webm.url %>" type=\'video/webm; codecs="vp8, vorbis"\'><!-- Flash Fallback. Use any flash video player here. Make sure to keep the vjs-flash-fallback class. --><object id="flash_fallback_1" class="vjs-flash-fallback" width="525" height="296" type="application/x-shockwave-flash" data="http://releases.flowplayer.org/swf/flowplayer-3.2.1.swf"><param name="movie" value="http://releases.flowplayer.org/swf/flowplayer-3.2.1.swf" /><param name="allowfullscreen" value="true" /><param name="wmode" VALUE="opaque"><param name="flashvars" value=\'config={"playlist":["<%= retailer.display_image.url %>", {"url": "http://andrews.heroku.com<%= retailer.m4v_file.url %>","autoPlay":false,"autoBuffering":true}]}\' /><!-- Image Fallback. Typically the same as the poster image. --><img src="<%= retailer.display_image.url %>" width="525" height="296" alt="Poster Image" title="No video playback capabilities." /></object></video></div>');
				$(this).css({'display':'none'});
				$(this).siblings(".video-js-box").children("video").trigger("play");
				return false;
			});
		});
		</script>
		<div class="video_slide <%= retailer.position %> <% if i==0%> active<% end %>" style="left:<%= position %>px;">
			<img src="<%= retailer.display_image.url %>" width="525" height="296" class="preview_image retail <%= retailer.position %>" />
			<div class="text">
			<%=raw retailer.text %>
			</div>
		</div>
		<%end%>
	</div>
	<a class="portal" target="_blank" href="http://cp.adntx.com/">Visit Our Customer Portal >></a>